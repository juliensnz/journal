<div class="card article-jenkins">
    <div class="header">Continous integration</div>
    <div class="content">
    <table>
        <tr>
            <th>jobs</th>
            <th>1.2</th>
            <th>1.3</th>
            <th>dev</th>
        </tr>
        {% for job, status in jobs %}
        <tr>
            <td>{{ job }}</td>
            <td class="{{ status["1.2"] == 'blue' ? 'success' : 'failure' }}">{{ status["1.2"] == 'blue' ? '✔︎' : 'X' }}</td>
            <td class="{{ status["1.3"] == 'blue' ? 'success' : 'failure' }}">{{ status["1.3"] == 'blue' ? '✔︎' : 'X'  }}</td>
            <td class="{{ status["dev"] == 'blue' ? 'success' : 'failure' }}">{{ status["dev"] == 'blue' ? '✔︎' : 'X'  }}</td>
        {% endfor %}
        </tr>
    </table>
    </div>
</div>

<style>
.article-jenkins .header {
    font-size: 29px;
}

.article-jenkins table {
    width: 100%;
    margin-top: 10px;
    border-collapse: collapse;
}

.article-jenkins table td:not(:first-child) {
    text-align: center;
    font-size: 20px;
    border-left: 1px solid #555;
    width: 50px;
}

.article-jenkins table td.success {
    opacity: 0.5;
}

.article-jenkins table tr:nth-child(2) td {
    padding-top:5px;
}

.article-jenkins table th {
    text-transform: uppercase;
    border-bottom: 1px solid black;
}

.article-jenkins table th:first-child {
    text-align: left;
}
</style>

